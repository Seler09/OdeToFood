@page
@model OdeToFood.Pages.Restaurants.ListModel
@{
}

<h1>Restaurants</h1>

<form method="get">
    <div class="form-group">
        <div class="input-group">
            <input type="search" class="form-control" asp-for="SearchTerm" />
            <span class="input-group-btn">
                <button class="btn btn-dark">
                    <i class="btn-primary"></i>
                </button>
            </span>
        </div>
    </div>
</form>

<table class="table">
    @foreach (var restaurant in Model.Restaurants)
    {
    <tr>
        <td>@restaurant.Name</td>
        <td>@restaurant.Location</td>
        <td>@restaurant.Type</td>
        <td>
            <a class="btn btn-lg btn-dark"
               asp-page="./Detail" asp-route-restaurantId="@restaurant.Id">
                <i class="btn-dark"></i>
            </a>
            <a class="btn btn-lg btn-dark"
               asp-page="./Edit" asp-route-restaurantId="@restaurant.Id">
                <i class="btn-info"></i>
            </a>
            <a class="btn btn-lg btn-dark"
               asp-page="./Delete" asp-route-restaurantId="@restaurant.Id">
                <i class="btn-dark"></i>
            </a>
        </td>
    </tr>
    }
</table>

@if (Model.Message != null)
{
    <div class="alert alert-info">@Model.Message</div>
}

<a asp-page=".\Edit" class="btn btn-primary">Add New</a>

@section footer{
    <div>@Model.Message</div>
}