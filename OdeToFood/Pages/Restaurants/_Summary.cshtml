@using OdeToFood.Core
@model Restaurant

<div class="panel panel-default">
    <div class="panel-heading">
        <h3>@Model.Name</h3>
    </div>
    <div class="panel-body">
        <span>Location: @Model.Location</span>
        <span>Cuisine: @Model.Type</span>
    </div>
    <div calss="panel-footer">
        <a class="btn btn-lg btn-dark"
           asp-page="./Detail" asp-route-restaurantId="@Model.Id">
            <i class="btn-dark"></i>
        </a>
        <a class="btn btn-lg btn-dark"
           asp-page="./Edit" asp-route-restaurantId="@Model.Id">
            <i class="btn-info"></i>
        </a>
        <a class="btn btn-lg btn-dark"
           asp-page="./Delete" asp-route-restaurantId="@Model.Id">
            <i class="btn-dark"></i>
        </a>        
    </div>
</div>